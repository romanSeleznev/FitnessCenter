@model FitnessCenter.Models.Center
@{
    ViewBag.Title = "Update";
}
@{ var item = Model;}
    <form asp-action="UpdateCenter" asp-controller="Center">
        <div class="form-group">
            <label asp-for="Name" class="control-label">Name</label>
            <input type="text" asp-for="Name" class="form-control" value="@item.Name" />
        </div>
        <div class="form-group">
            <label asp-for="Adress" class="control-label">Adress</label>
            <input type="text" asp-for="Adress" class="form-control" value="@item.Adress" />
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
            <input type="text" asp-for="PhoneNumber" class="form-control" value="@item.PhoneNumber" />
        </div>

        <div class="form-group">
            <input type="submit" value="Отправить" class="btn btn-default" />
        </div>

    </form>
